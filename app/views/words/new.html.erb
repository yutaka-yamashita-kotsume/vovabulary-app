<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-6 text-gray-800">新しい単語を記録</h1>

  <%= form_with(model: @word) do |f| %>
    <div class="mb-4">
      <%= f.label :original_text, "英単語", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :original_text, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "example" %>
    </div>

    <div class="mb-4">
      <%= f.label :meaning, "意味（空欄なら自動取得）", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :meaning, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <%= f.submit "登録する", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 transition" %>
  <% end %>
</div>