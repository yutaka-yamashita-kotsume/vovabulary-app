<div class="max-w-2xl mx-auto px-4 py-12">
  <div class="bg-white shadow-xl rounded-2xl overflow-hidden border border-gray-100">
    <div class="bg-indigo-600 px-8 py-6">
      <h1 class="text-2xl font-bold text-white">Add New Word</h1>
      <p class="text-indigo-100 text-sm mt-1">新しい英単語をあなたの辞書に追加しましょう</p>
    </div>

    <div class="p-8">
      <%= render "form", word: @word %>

      <div class="mt-8 pt-6 border-t border-gray-100 flex justify-center">
        <%= link_to "← Back to My Vocabulary", words_path, class: "text-gray-500 hover:text-indigo-600 text-sm font-medium transition" %>
      </div>
    </div>
  </div>
</div>