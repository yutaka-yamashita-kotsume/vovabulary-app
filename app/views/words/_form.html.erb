<%= form_with(model: word, class: "space-y-6") do |form| %>
  <% if word.errors.any? %>
    <div class="bg-red-50 text-red-700 p-4 rounded-lg border border-red-200 animate-pulse">
      <h2 class="font-bold text-sm mb-1"><%= pluralize(word.errors.count, "error") %> prohibited this word from being saved:</h2>
      <ul class="list-disc list-inside text-sm">
        <% word.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
  <%= form.label :original_text, "English Word", class: "block text-sm font-semibold text-gray-700 mb-2" %>
  <%= form.text_field :original_text, class: "..." %>
</div>

  <div>
    <%= form.label :meaning, "Meaning (Optional)", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= form.text_area :meaning, 
        rows: 4, 
        class: "w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl focus:ring-4 focus:ring-indigo-500/10 focus:border-indigo-500 outline-none transition-all placeholder-gray-400", 
        placeholder: "意味を記入してください。空欄の場合は後でAIが自動生成できます。" %>
  </div>

  <%# フォーム内のボタン部分の例 %>
<div class="mt-8">
  <%= form.submit "Save Word", class: "w-full py-4 bg-indigo-600 text-white font-bold rounded-2xl shadow-lg shadow-indigo-100 hover:bg-indigo-700 transition-all cursor-pointer" %>
</div>
<% end %>