<body class="bg-gray-50 text-gray-900 font-sans">
    <%# --- フラッシュメッセージの表示エリア --- %>
    <div class="fixed top-5 left-0 right-0 z-50 flex flex-col items-center gap-2 pointer-events-none">
      <% flash.each do |type, message| %>
        <% 
          # タイプに合わせて色を定義
          bg_color = type == "notice" ? "bg-green-500" : "bg-red-500"
        %>
        <div class="<%= bg_color %> text-white px-6 py-3 rounded-2xl shadow-2xl font-bold animate-bounce pointer-events-auto">
          <%= message %>
        </div>
      <% end %>
    </div>
    <%# ------------------------------------ %>

    <main class="container mx-auto mt-10">
      <%= yield %>
    </main>
  </body>