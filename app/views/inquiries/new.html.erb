<div class="max-w-md mx-auto px-4 py-16">
  <div class="text-center mb-10">
    <div class="text-5xl mb-4">✉️</div>
    <h1 class="text-3xl font-black text-slate-800 tracking-tight">Contact</h1>
    <p class="text-slate-500 mt-2">ご意見・ご要望はこちらから</p>
  </div>

  <div class="bg-white p-8 rounded-3xl shadow-xl border border-slate-100">
    <%= form_with model: @inquiry, local: true do |f| %>
      <div class="space-y-6">
        <div>
          <%= f.label :name, "お名前", class: "block text-sm font-bold text-slate-700 mb-2 ml-1" %>
          <%= f.text_field :name, required: true, class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none transition-all" %>
        </div>

        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-bold text-slate-700 mb-2 ml-1" %>
          <%= f.email_field :email, required: true, class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none transition-all" %>
        </div>

        <div>
          <%= f.label :message, "メッセージ", class: "block text-sm font-bold text-slate-700 mb-2 ml-1" %>
          <%= f.text_area :message, rows: 5, required: true, class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none transition-all" %>
        </div>

        <div class="pt-2">
          <%= f.submit "送信する", class: "w-full py-4 bg-slate-800 text-white font-bold rounded-2xl shadow-lg hover:bg-slate-700 active:scale-95 transition-all cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-8 text-center">
    <%= link_to "ホームへ戻る", root_path, class: "text-sm text-slate-400 hover:text-indigo-600 underline" %>
  </div>
</div>