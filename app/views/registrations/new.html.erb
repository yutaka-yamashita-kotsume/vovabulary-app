<div class="max-w-md mx-auto px-4 py-16">
  <div class="text-center mb-10">
    <div class="text-5xl mb-4">ЁЯЪА</div>
    <h1 class="text-3xl font-black text-slate-800 tracking-tight">Create Account</h1>
    <p class="text-slate-500 mt-2">хНШшкЮх╕│уВТхзЛуВБуБ╛уБЧуВЗуБЖ</p>
  </div>

  <div class="bg-white p-8 rounded-3xl shadow-xl border border-slate-100">
    <%= form_with model: @user, url: registrations_path do |f| %>
      <div class="space-y-6">
        <div>
          <%= f.label :email_address, "Email", class: "block text-sm font-bold text-slate-700 mb-2 ml-1" %>
          <%= f.email_field :email_address, required: true, placeholder: "your@example.com", class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none transition-all" %>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-bold text-slate-700 mb-2 ml-1" %>
          <%= f.password_field :password, required: true, placeholder: "тАвтАвтАвтАвтАвтАвтАвтАв", class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none transition-all" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-bold text-slate-700 mb-2 ml-1" %>
          <%= f.password_field :password_confirmation, required: true, placeholder: "тАвтАвтАвтАвтАвтАвтАвтАв", class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none transition-all" %>
        </div>

        <div class="pt-2">
          <%= f.submit "Sign Up", class: "w-full py-4 bg-indigo-600 text-white font-bold rounded-2xl shadow-lg hover:bg-indigo-700 active:scale-95 transition-all cursor-pointer" %>
        </div>
      </div>
    <% end %>
    
    <div class="mt-8 text-center">
      <%= link_to "Already have an account? Login", new_session_path, class: "text-sm text-slate-400 hover:text-indigo-600 transition-all" %>
    </div>
  </div>
</div>